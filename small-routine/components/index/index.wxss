/* components/index/index.wxss */
@import "../../app.wxss";
.erys-index-box__ {
  width: 40px;
  height: auto;
  position: fixed;
  right: 18px;
  bottom: 46px;
  z-index: 199; /*全场最高index值*/
  padding: 0 !important;
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  pointer-events: auto;
}
.erys-index__index-items {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-index__spot-badge {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: red;
  position: absolute;
  top: 4px;
  right: 4px;
}
.erys-index__badge-init {
  position: relative;
}
.erys-index___radius {
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}
.erys-index__top-radius {
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}